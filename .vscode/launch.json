{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chromium with Playwright",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/playwright/lib/cli/cli.js",
      "args": [
        "install"
      ],
      "runtimeExecutable": "node",
     "env": {
      "PLAYWRIGHT_BROWSERS_PATH": "C:\\Users\\kon1481\\AppData\\Local\\chrome-win\\chrome.exe"
}
      
    },
    {
      "name": "Launch Playwright Test",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/playwright/test",
      "args": [
        "test"
      ],
      "runtimeExecutable": "node",
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "C:\\Users\\kon1481\\AppData\\Local\\chrome-win\\chrome.exe"
      }
    }
  ]
}
